{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "esnext",
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@my/api/*": ["./packages/api/*"],
      "@my/db/*": ["./packages/db/*"],
      "@my/fonts/*": ["./packages/fonts/*"],
      "@my/ui/*": ["./packages/ui/*"],
      "app/*": ["./packages/app/*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "exclude": ["**/node_modules", "**/dist", "**/types", "apps/next/out", "apps/next/.next", "apps/next/.tamagui"]
}
